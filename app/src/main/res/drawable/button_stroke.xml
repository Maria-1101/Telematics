<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#406C8D95"> <!-- Ripple effect -->

    <!-- Ripple mask layer (defines the bounds of the ripple) -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#1AD9D9D9" /> <!-- Same transparency as vector -->
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- Normal background with stroke and translucent background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1AD9D9D9" /> <!-- Matching fill transparency -->
            <stroke
                android:width="2dp"
                android:color="@color/hint" />
            <corners android:radius="30dp" />
        </shape>
    </item>
</ripple>
